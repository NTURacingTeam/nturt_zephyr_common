menuconfig NTURT_MSG
	bool "Inter-thread communication support"
	depends on NTURT
	select ZBUS
	select ZBUS_CHANNEL_NAME

if NTURT_MSG

module = NTURT_MSG
module-str = Inter-thread Communication
source "subsys/logging/Kconfig.template.log_config"

config NTURT_MSG_INIT_PRIORITY
	int "Init priority"
	default 10
	help
	  Inter-thread communication initialization priority.

config NTURT_MSG_MAX_SIZE
	int "Maximum message size"
	default 256
	help
	  Maximum size of a message used to create buffers of the right size.
	  Increase when appropriate.

config NTURT_MSG_LOGGING
	bool "Message logging support"
	depends on NTURT_FS
	default y
	select ZBUS_RUNTIME_OBSERVERS

if NTURT_MSG_LOGGING

config NTURT_MSG_LOGGING_BUF_SIZE
	int "Logging buffer size"
	default 4096
	help
	  Size of the buffer used for logging messages in bytes.

endif # NTURT_MSG_LOGGING

config NTURT_MSG_SHELL
	bool "Message shell support"
	depends on NTURT_SHELL
	default y
	select CBPRINTF_FP_SUPPORT
	select ZBUS_CHANNEL_PUBLISH_STATS
	select ZBUS_RUNTIME_OBSERVERS

endif # NTURT_MSG
