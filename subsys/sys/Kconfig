menuconfig NTURT_SYS
    depends on NTURT
    select REBOOT
    bool "Basic system functionalities"

if NTURT_SYS

config NTURT_SYS_INIT_PRIORITY
    int "NTURT system module init priority"
    default 0
    help
      NTURT common library system module initialization priority.

config NTURT_SYS_SHELL
    bool "Shell support"
    select SHELL

DT_CHOSEN_NTURT_BUZZER := nturt,buzzer

config NTURT_SYS_REBOOT_SOUND
    bool "Reboot sound"
    depends on $(dt_chosen_enabled,$(DT_CHOSEN_NTURT_BUZZER))
    default y
    select GPIO

rsource "Kconfig.fs"
rsource "Kconfig.rtc"

endif # NTURT_SYS
